{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2019",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "baseUrl": ".",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,   
    "allowArbitraryExtensions": true,       
  },
}